@model IEnumerable<ITWEB_M3.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category list";
}
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.Label("Component Type Count")
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.CategoryToComponentTypes.Count().ToString()
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-default">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-default">Delete</a>
                    <a asp-controller="Category" asp-action="View" asp-route-id="@item.CategoryId" class="btn btn-default">Component Types</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="7" align="right">
                <a asp-controller="Category" asp-action="Create" class="btn btn-default">Create</a>
            </td>
        </tr>
    </table>
</div>